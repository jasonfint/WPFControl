<Window x:Class="在WPF中蒙版背景实现.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:在WPF中蒙版背景实现"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"  WindowStyle="None"  WindowState="Normal" AllowsTransparency="True" Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Opacity="0.6" Color="LightBlue"></SolidColorBrush>
    </Window.Background>
    <Grid>
        <Button Content="Window 透明度测试" Height="200" Width="300"/>
        <TextBlock Height="50" x:Name="Code" Background="{x:Static SystemParameters.WindowGlassBrush}">Code</TextBlock>
    </Grid>
</Window>
